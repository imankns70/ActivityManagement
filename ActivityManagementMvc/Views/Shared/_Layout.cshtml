@using ActivityManagement.Services.EfInterfaces
@using ActivityManagement.ViewModels.SiteSettings
@inject IWritableOptions<SiteSettings> WritableOptions
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>@WritableOptions.Value.SiteInformation.Title</title>

    <!-- Favicon -->
    <link href="@WritableOptions.Value.SiteInformation.Favicon" rel="icon" type="image/png" />

    <link href="assets/images/favicon.ico" rel="icon" type="image/png">
    <link href="lib/bootstrap/dist/css/Bootstrap-rtl.css" rel="stylesheet" />
    <link href="assets/vendor/nucleo/css/nucleo.css" rel="stylesheet">
    <link href="assets/vendor/fontawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link type="text/css" href="assets/css/argon.css?v=1.0.0" rel="stylesheet">

    <link href="lib/FileInput/bootstrap-fileinput.css" rel="stylesheet" />

    <link href="lib/Kendo/css/kendo.common.min.css" rel="stylesheet" />
    <link href="lib/Kendo/css/kendo.bootstrap.custom.css" rel="stylesheet" />

    <link href="lib/Kendo/css/kendo.rtl.min.css" rel="stylesheet" />
    <link href="lib/jqueryConfirm/css/jquery-confirm.css" rel="stylesheet" />

    <link href="lib/bootstrap.datetimepicker/css/jquery.md.bootstrap.datetimepicker.style.css" rel="stylesheet" />
    <link href="assets/css/style.css" rel="stylesheet" />
    <link href="lib/Loading/css/preloader.css" rel="stylesheet" />



</head>
<body>
    <!-- Sidenav -->
    <nav class="navbar navbar-vertical fixed-left navbar-expand-md navbar-light bg-white" id="sidenav-main">
        <div class="container-fluid">
            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Brand -->
            <a class="navbar-brand pt-0" href="./index.html">
                <img src="@WritableOptions.Value.SiteInformation.Logo" class="navbar-brand-img" alt="...">
                پنل مدیریت @WritableOptions.Value.SiteInformation.Title
            </a>
            <!-- User -->
            <ul class="nav align-items-center d-md-none">
                @await Component.InvokeAsync("Profile")
            </ul>
            <!-- Collapse -->
            <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                <!-- Collapse header -->
                <div class="navbar-collapse-header d-md-none">
                    <div class="row">
                        <div class="col-9 collapse-brand">
                            <a href="./index.html">
                                <img src="@WritableOptions.Value.SiteInformation.Logo">  @WritableOptions.Value.SiteInformation.Title
                            </a>
                        </div>
                        <div class="col-3 collapse-close">
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                                <span></span>
                                <span></span>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Form -->

                <hr>
                <!-- Navigation -->
                @await Html.PartialAsync("_RightSideMenu")
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content">
        <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
            <div class="container-fluid">
                <!-- Brand -->
                <ul class="nav nav-sitemap justify-content-center justify-content-xl-end">
                    <li>
                        <a class="h4 mb-0 text-white d-lg-inline-block" asp-controller="Home" asp-action="Index"> صفحه اصلی </a>
                    </li>

                </ul>

                <!-- User -->
                @await Html.PartialAsync("_Login")
            </div>
        </nav>
        <div class="header bg-gradient-primary pb-6 pt-5 pt-md-3">
        </div>
        @RenderBody()

    </div>


<script src="lib/jquery/jquery.min.js"></script>
<script src="assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="lib/bootstrap.datetimepicker/js/jquery.md.bootstrap.datetimepicker.js"></script>
<script src="lib/Kendo/js/kendo.all.min.js"></script>
<script src="lib/Kendo/js/aspnetmvc.min.js"></script>
<script src="lib/Kendo/js/cultures/kendo.culture.fa-IR.min.js"></script>
<script src="lib/Kendo/js/messages/kendo.messages.fa-IR.js"></script>
<script src="lib/jqueryConfirm/js/jquery-confirm.js"></script>
<script src="lib/FileInput/bootstrap-fileinput.min.js"></script>

<script src="lib/Kendo/js/jquery.validate.js"></script>
<script src="lib/Kendo/js/validate.unobtrusive.js"></script>
<script src="assets/fonts/FontAwsome5/js/fontawesome.js"></script>
<script src="assets/js/argon.min.js"></script>
<script src="assets/js/BaseScripts.js"></script>
<script src="lib/Loading/js/jquery.preloader.min.js"></script>
   
<script type="text/javascript">
    $(document).bind("ajaxStart", function() {
        ShowLoading();
    });

    $(document).bind("ajaxStop", function() {
        HideLoading();
    });
</script>

@RenderSection("Scripts", false)


</body>
</html>
