@model ActivityManagement.ViewModels.Home.BreadCrumbViewModel

<!-- Header -->
<nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
    <div class="container-fluid">
        <!-- Brand -->
        <ul class="nav nav-sitemap justify-content-center justify-content-xl-end">
            <li>
                <a class="h4 mb-0 text-white d-lg-inline-block" asp-controller="Home" asp-action="Index"> صفحه اصلی </a>
            </li>
            @if (!string.IsNullOrWhiteSpace(Model.Title))
            {
                <li class="pr-2 pl-2">
                    <i class="fa fa-angle-left text-white align-middle"></i>
                </li>
            }
       
            <li>
                <a class="h4 mb-0 text-white d-lg-inline-block" href="@Model.Url">@Model.Title</a>
            </li>

        </ul>

        <!-- User -->
        @await Html.PartialAsync("_Profile")
    </div>
</nav>
<!-- Header -->
<div class="header bg-gradient-primary pb-4 pt-5 pt-md-8">
</div>