@model ActivityManagement.ViewModels.Team.TeamViewModel

<form id="EditTeamForm" asp-controller="TeamManager" asp-action="Edit" method="post" class="form-inline">
     @Html.AntiForgeryToken()
     
  
   
    <input type="hidden" asp-for="TeamId" />


    <div class="form-group">

        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>


    </div>
    <div class="form-group mt-2">

        <label asp-for="Description" class="col-form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>


    <div class="row form-group mt-5">

        <button type="button" class="btn-save mr-2" onclick="SendAndUpdate('#EditTeamForm')"><i class="fa fa-plus"></i><span class="mr-1">ذخیره</span></button>
        <button type="button" class="btn-close" onclick="closeWindows(this)"><i class="fa fa-times"></i><span class="mr-1">بستن</span></button>
        

    </div>

</form>

