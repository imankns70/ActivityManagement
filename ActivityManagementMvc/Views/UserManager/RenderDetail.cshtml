@model ActivityManagement.ViewModels.UserManager.UsersViewModel
<div class="Detail">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">

                <label asp-for="UserName" class="col-form-label"></label>:
                <span>
                    @Html.DisplayFor(model => model.UserName)

                </span>
            </div>
            <div class="form-group">

                <label asp-for="FirstName" class="col-form-label"></label>:
                <span>
                    @Html.DisplayFor(model => model.FirstName)
                </span>
            </div>
            <div class="form-group">

                <label asp-for="LastName" class="col-form-label"></label>:
                <span>
                    @Html.DisplayFor(model => model.LastName)
                </span>
            </div>
            <div class="form-group">

                <label asp-for="PersianBirthDate" class="col-form-label"></label>:
                <span>
                    @Html.DisplayFor(model => model.PersianBirthDate)
                </span>

            </div>
            <div class="form-group">

                <label asp-for="PersianRegisterDateTime" class="col-form-label"></label>:
                <span>
                    @Html.DisplayFor(model => model.PersianRegisterDateTime)
                </span>

            </div>
            <div class="form-group">

                <label asp-for="PersianBirthDate" class="col-form-label"></label>:
                <span>
                    @Html.DisplayFor(model => model.PersianBirthDate)
                </span>

            </div>

            <div class="form-group">

                <label asp-for="PhoneNumber" class="col-form-label"></label>:
                <span>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </span>

            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group mt-5 mr-5">

                <label asp-for="Image" class="col-form-label"></label>:
                <span class="border" style="padding: 90px 18px;">

                    @if (string.IsNullOrWhiteSpace(Model.Image))
                    {
                        <img src="/assets/images/UserPic.png" width="150" height="160" />
                    }
                    else
                    {
                        <img src="/Users/@Model.Image" width="150" height="160" />
                    }
                </span>

            </div>
        </div>

    </div>
  

</div>












