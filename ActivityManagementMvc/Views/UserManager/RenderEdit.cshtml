@model ActivityManagement.ViewModels.UserManager.UsersViewModel
@using ActivityManagement.DomainClasses.Entities.Identity;

<form class="form-inline" id="EditUserForm" enctype="multipart/form-data" asp-controller="UserManager" asp-action="Edit">
    <div class="container-fluid">
        <div class="row mt-2 mb-2">

            <input type="hidden" asp-for="Id" />

            <div class="col-md-3 border-left">
                <div class="text-center">
                    <p>تصویر پروفایل</p>
                    <div class="fileinput fileinput-new border" data-provides="fileinput">
                        <div class="fileinput-new thumbnail" style="height: 100px;">
                            @if (string.IsNullOrWhiteSpace(Model.Image))
                            {
                                <img src="~/assets/images/UserPic.png" />

                            }
                            else
                            {
                                <img src="/Users/@Model.Image" />

                            }

                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail " style="height: 132px; width: 132px"> </div>
                        <div>
                            <div class="btn-file">
                                <span class="fileinput-new btn btn-success"> انتخاب</span>
                                <span class="fileinput-exists btn btn-success">انتخاب</span>
                                <input type="file" asp-for="ImageFile" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>

                            </div>

                        </div>

                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group mb-3 mr-2">
                        <label asp-for="UserName" class="control-label"></label>


                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="form-group mb-3 mr-2">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 mr-2">
                        <label asp-for="LastName" class="control-label"></label>

                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 mr-2">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>




                    <div class="form-group mb-3 mr-2">
                        <label asp-for="PhoneNumber" class="control-label"></label>

                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 mr-2">
                        <label asp-for="PersianBirthDate" class="control-label"></label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text cursor-pointer" id="BirthDate">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                            <input asp-for="PersianBirthDate" class="form-control" id="InputBirthDate" style="direction:ltr" />
                            <span asp-validation-for="PersianBirthDate" class="text-danger"></span>

                        </div>
                    </div>



                    <div class="form-group  mr-2">
                        <label asp-for="Gender" class="control-label"></label>

                        <input asp-for="Gender" value="@GenderType.Male" checked="checked" type="radio" />
                        <label>
                            مرد
                        </label>

                        <input asp-for="Gender" value="@GenderType.Female" type="radio" />

                        <label>
                            زن
                        </label>



                    </div>
                    <div class="form-group mt-3 mr-2">
                        <label asp-for="IsActive" class="control-label"></label>

                        @if (Model.IsActive)
                        {
                            <input asp-for="IsActive" checked="checked" value="true" type="radio" />
                            <label>
                                فعال
                            </label>

                            <input asp-for="IsActive" value="false" type="radio" />

                            <label>
                                غیر فعال
                            </label>
                        }
                        else
                        {
                            <input asp-for="IsActive" value="true" type="radio" />
                            <label>
                                فعال
                            </label>

                            <input asp-for="IsActive" checked="checked" value="false" type="radio" />

                            <label>
                                غیر فعال
                            </label>
                        }




                    </div>
                    <div class="form-group mt-4 mr-2">
                        <label>انتخاب نقش</label>

                        <input asp-for="RoleId" class="form-control" required />

                    </div>
                </div>
              
                   

                <div class="row mt-3">
                    <div class="form-group mr-2">

                        <button type="button" class="btn-save" onclick="SendAndUpdate('#EditUserForm')"><i class="fa fa-check"></i><span class="mr-1">ذخیره</span></button>
                        <button type="button" class="btn-close" onclick="closeWindows(this)"><i class="fa fa-times"></i><span class="mr-1">بستن</span></button>


                    </div>
                </div>

            </div>




        </div>

    </div>

</form>


<script>
    $("#BirthDate").MdPersianDateTimePicker({

        targetTextSelector: "#InputBirthDate",
        placement: 'top',

    });
    KendoComboBind("#RoleId", "RoleManager", "ComboRole");
</script>