@model ActivityManagement.ViewModels.RoleManager.RolesViewModel

    <form id="CreateRoleForm" asp-controller="RoleManager" asp-action="Create" method="post" class="form-inline">
        @Html.AntiForgeryToken()


        <div class="form-group">

            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" required />

        </div>
        <div class="form-group mt-2">

            <label asp-for="Description" class="col-form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>

        </div>


        <div class="row form-group mt-5">

            <button type="button" class="btn-save mr-2" onclick="SendAndUpdate('#CreateRoleForm')"><i class="fa fa-check"></i><span class="mr-1">ذخیره</span></button>
            <button type="button" class="btn-close" onclick="closeWindows(this)"><i class="fa fa-times"></i><span class="mr-1">بستن</span></button>


        </div>

    </form>

